<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HeavyLift.Views.WorkoutViews.ExerciseSelectView"
             xmlns:viewmodel="clr-namespace:HeavyLift.ViewModels.WorkoutViewModels"
             xmlns:model="clr-namespace:HeavyLift.Models" 
             xmlns:selectors="clr-namespace:HeavyLift.TemplateSelectors"
             xmlns:converters="clr-namespace:HeavyLift.Converters"
             xmlns:behaviors="clr-namespace:HeavyLift.Behavior"
             x:DataType="viewmodel:TrainingPlanCreatorViewModel"
             Title="Select exercise">
    <Grid BackgroundColor="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <VerticalStackLayout Margin="20" Spacing="20">
            <Label Style="{StaticResource Big}" Text="Search"/>
            <Border Padding="5"
                    Stroke="{StaticResource Secondary}" StrokeShape="RoundRectangle 30" StrokeThickness="4"
                    Background="{StaticResource SecondaryBackgroundColor}">
                    <Entry Placeholder="Password" PlaceholderColor="{StaticResource TextColor}"
                        Text="{Binding PasswordInput}" TextColor="{StaticResource TextColor}" FontSize="16" IsPassword="True"
                    />
            </Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource MainButton}"  Text="Add custom exercise" LineBreakMode="WordWrap"/>

                <Button Grid.Column="2" Style="{StaticResource MainButton}" 
                        Text="Muscles"/>
            </Grid>
        </VerticalStackLayout>
    </Grid>
</ContentPage>