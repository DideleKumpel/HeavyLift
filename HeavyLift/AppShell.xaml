    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HeavyLift"
    xmlns:views="clr-namespace:HeavyLift.Views"

    Title="HeavyLift">

    <TabBar>
        <ShellContent Title="Home"
