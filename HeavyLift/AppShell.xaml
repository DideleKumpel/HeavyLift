<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HeavyLift.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HeavyLift"
    xmlns:views="clr-namespace:HeavyLift.Views"
    Title="HeavyLift">

    <TabBar>
        <Tab Title="Home" Icon="home_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomeView}"/>
        </Tab>
        <Tab Title="Workouts" Icon="dumbbell_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:WorkoutView}"/>
        </Tab>
        <Tab Title="Profile" Icon="user_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:ProfileView}"/>
        </Tab>
    </TabBar>
</Shell>
